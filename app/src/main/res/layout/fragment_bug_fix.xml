<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".bugfix.BugFixFragment">

        <TextView
            android:id="@+id/tv"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/purple_200"
            android:text="@string/bug_fix_animation_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/tv_mask"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@color/translate_black"/>

        <Button
            android:id="@+id/btn_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/bug_fix_animation_btn_start_text"
            app:layout_constraintBottom_toTopOf="@+id/btn_get_animation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/btn_get_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="获取动画对象"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btn_controller"
            app:layout_constraintStart_toStartOf="@+id/btn_controller" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>