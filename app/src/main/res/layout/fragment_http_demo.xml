<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".network.HttpDemoFragment">

        <Button
            android:id="@+id/btn_okHttp_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/btn_okHttp_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/tv_okHttp_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/tv_response_label"
            app:layout_constraintStart_toStartOf="@id/btn_okHttp_request"
            app:layout_constraintTop_toBottomOf="@id/btn_okHttp_request" />

        <TextView
            android:id="@+id/tv_okHttp_response"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:scrollbars="vertical|horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_okHttp_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_okHttp_label" />

        <!-- TODO: Update blank fragment layout -->
        <Button
            android:id="@+id/btn_retrofit_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="retrofit请求"
            app:layout_constraintStart_toStartOf="@+id/tv_okHttp_response"
            app:layout_constraintTop_toBottomOf="@+id/tv_okHttp_response" />

        <TextView
            android:id="@+id/tv_retrofit_result_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/tv_response_label"
            app:layout_constraintStart_toStartOf="@+id/btn_retrofit_start"
            app:layout_constraintTop_toBottomOf="@+id/btn_retrofit_start" />

        <TextView
            android:id="@+id/tv_retrofit_result"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:scrollbars="vertical|horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_retrofit_result_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_retrofit_result_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>